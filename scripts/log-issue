#!/usr/bin/env bash
# -----------------------------------------------------------------------------
# log-issue — one-liner to invoke the secure-logger container
#
# Usage: log-issue
#
# Expects:
#   • LOGGER_USER, LOGGER_PAT, LOGGER_GPG_PW
#   • working dir is your local clone of the repo
# -----------------------------------------------------------------------------

docker run --rm -it \
  -v ~/.ssh/id_ed25519:/root/.ssh/id_ed25519:ro \
  -v ~/.ssh/known_hosts:/root/.ssh/known_hosts:ro \
  -v "$PWD":/workspace \
  andilemj/secure-logger:latest
