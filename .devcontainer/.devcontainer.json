// .devcontainer/devcontainer.json
{
  "name": "Secure-Logger Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  
  "containerEnv": {
    "USER": "${localEnv:USER}",
    "PAT": "${localEnv:PAT}",
    "LOGR_GPG_PW": "${localEnv:LOG_PW}",
    "LOGR_NAME": "${localEnv:USER_NAME}",
    "LOGR_EMAIL": "${localEnv:USER_EMAIL}"
  },
  
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "postCreateCommand": [
    // make sure ~/bin exists
    "mkdir -p /home/vscode/bin",
    // copy your launcher there
    "cp /workspace/log-issue /home/vscode/bin/log-issue",
    "chmod +x /home/vscode/bin/log-issue",
    // add ~/bin to PATH
    "bash -lc \"echo 'export PATH=\\\"$HOME/bin:$PATH\\\"' >> /home/vscode/.bashrc\""
  ]
}
